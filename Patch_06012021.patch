+	public static GenericDbMessages uploadAndUpdateTheEmailEvents(String filePath, User loggedUser,
+			java.util.Locale locale) {
+		LOG.debug("MailEventDAO :: uploadAndUpdateTheEmailEvents :: START");
+
+		String absFilePath = filePath;
+
+		XLSFileParser genFileParser = (XLSFileParser) GenericFileParser.getIntance(absFilePath);
+
+		LOG.debug("MailEventDAO :: uploadAndUpdateTheEmailEvents :: ENDS");
+
+		try {
+			genFileParser.open(absFilePath, I18nUtil.getString(locale, XAppConstants.MAIL_EVENT_SHEET_NAME));
+
+			List rowData = null;
+			while (true) {
+				int counter = genFileParser.getRowCounter();
+				rowData = genFileParser.read(counter);
+				if (rowData == null) {
+					break;
+				} else if (counter != 0 && !checkAnyValueIsNullOrEmpty(rowData, counter + 1)) {
+					updateEventDetails(rowData, loggedUser);
+				}
+			}
+		} catch (Exception e) {
+			e.printStackTrace();
+			LOG.error("Exception while reading the file ", e);
+		}
+		return null;
+	}
+
+	private static boolean checkAnyValueIsNullOrEmpty(List rowData, Integer rowNumber) {
+
+		boolean isEmptyEntryAvailable = false;
+		for (Iterator iterator = rowData.iterator(); iterator.hasNext();) {
+			String valueToCheck = (String) iterator.next();
+			isEmptyEntryAvailable = isEmptyEntryAvailable || StringUtils.isBlank(valueToCheck);
+		}
+		if (isEmptyEntryAvailable) {
+			LOG.error("Empty entry available at row number " + rowNumber);
+		}
+		return isEmptyEntryAvailable;
+	}
