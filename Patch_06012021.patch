+	private static void updateEventDetails(List rowData, User loggedUser) {
+
+		XAppConnection xAppConnection = null;
+		PreparedStatement statement = null;
+		String selectString = "";
+
+		try {
+			xAppConnection = XAppDBConnectionManager.getInstance().getConnection();
+			selectString = "UPDATE GLT_RQ_MAIL_EVENT_DETAILS SET SUBJECT_VALUE=?,CONTENT_VALUE=?, "
+					+ "LAST_UPDATED_BY=?,LAST_UPDATE_DATE=?,LAST_UPDATE_TIME=? "
+					+ "WHERE EVENT_ID=? AND SUBJECT_KEY=? AND  CONTENT_KEY=?";
+			statement = xAppConnection.prepareStatement(selectString);
+			statement.setString(1, (String) rowData.get(2));
+			statement.setString(2, (String) rowData.get(4));
+			statement.setInt(3, loggedUser.getRqUserId());
+			statement.setDate(4, XAppUtils.getDatabaseInsertDate(new java.sql.Date(System.currentTimeMillis())));
+			statement.setTime(5, XAppUtils.getDatabaseInsertTime(new java.sql.Time(System.currentTimeMillis())));
+			statement.setString(6, (String) rowData.get(0));
+			statement.setString(7, (String) rowData.get(1));
+			statement.setString(8, (String) rowData.get(3));
+			statement.executeUpdate();
+		} catch (Exception e) {
+			LOG.error(e.getMessage(), e);
+		} finally {
+			try {
+				XAppUtils.closeOpenCursors(xAppConnection, statement, null);
+			} catch (Exception e) {
+				LOG.error(e.getMessage(), e);
+			}
+		}
+
+	}
